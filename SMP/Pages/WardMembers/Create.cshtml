@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>WardMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WardMember.FirstName" class="control-label"></label>
                <input asp-for="WardMember.FirstName" class="form-control" />
                <span asp-validation-for="WardMember.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WardMember.LastName" class="control-label"></label>
                <input asp-for="WardMember.LastName" class="form-control" />
                <span asp-validation-for="WardMember.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WardMember.Calling" class="control-label"></label>
                <input asp-for="WardMember.Calling" class="form-control" />
                <span asp-validation-for="WardMember.Calling" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WardMember.IsBishopricMember" class="control-label"></label>
                <select class="form-control" type="text" id="WardMember_IsInBishopric" name="WardMember.IsInBishopric">
